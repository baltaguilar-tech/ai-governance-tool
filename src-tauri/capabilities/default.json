{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the AI Governance Tool",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "process:default",
    "process:allow-restart",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" }
      ]
    },
    {
      "identifier": "http:default"
    }
  ]
}
